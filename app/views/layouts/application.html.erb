<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="container">
    <div class="row">
      <div class="col">
        <h1 class='bg-secondary bg-gradient text-center p-2'>Little Esty Shop</h1>
      </div>
    </div>
    <nav>
      <div>
        <%= link_to 'Merchants', merchants_path %>
      </div>
    </nav>
<% flash.each do |type, message| %>
  <p><%= message %></p>
<% end %>
    <%= yield %>
  </body>
</html>
